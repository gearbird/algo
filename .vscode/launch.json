{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "GDB: Debug leetcode",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/leetcode",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: build leetcode solution",
            "miDebuggerPath": "/usr/bin/gdb",
            "logging": { 
                "moduleLoad": false, 
                "engineLogging": false, 
                "trace": false,
                "exceptions": true,
                "programOutput": true,
                "traceResponse": false
            }
        },
        {
            "name": "LLDB: Debug leetcode",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/bin/leetcode",
            "args": [],
            "preLaunchTask": "C/C++: build leetcode solution"
        },
        {
            "name": "g++ - Build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++ build active file",
            "miDebuggerPath": "/usr/bin/gdb",
            "logging": { 
                "moduleLoad": false, 
                "engineLogging": false, 
                "trace": false,
                "exceptions": true,
                "programOutput": true,
                "traceResponse": false
            }
        }
    ]
}